#include <stdio.h>

// =====================================================================
// ====================== FUNÇÕES RECURSIVAS ============================
// =====================================================================

// ------------------------- TORRE (Recursivo) --------------------------
void moverTorre(int casas) {
    if(casas == 0) return;     // Condição de parada da recursão
    printf("Direita\n");       // Torre sempre se move em linha reta
    moverTorre(casas - 1);     // Chamada recursiva
}

// ------------------------- RAINHA (Recursivo) -------------------------
void moverRainha(int casas) {
    if(casas == 0) return;
    printf("Esquerda\n");
    moverRainha(casas - 1);
}

// --------------------- BISPO (Recursivo + Loops) ---------------------
// Movimento diagonal cima-direita
void moverBispo(int casas) {

    if(casas == 0) return;

    // EXIGÊNCIA DO DESAFIO:
    // Loop externo representa movimento vertical
    // Loop interno representa movimento horizontal
    for(int v = 1; v <= 1; v++){
        for(int h = 1; h <= 1; h++){
            printf("Cima, Direita\n");
        }
    }

    moverBispo(casas - 1);   // Recursão continua
}

// =====================================================================
// ====================== CAVALO (LOOPS COMPLEXOS) ======================
// =====================================================================
// Movimento em L → 2 para cima + 1 para direita
// EXIGÊNCIA: loops aninhados, múltiplas variáveis, continue/break
void moverCavalo() {

    int movVertical = 2;
    int movHorizontal = 1;

    printf("\n=== Movimento do CAVALO ===\n");

    for(int i = 1; i <= movVertical; i++){
        
        // Primeiro movimento: subir 2 vezes
        printf("Cima\n");

        for(int j = 1; j <= movHorizontal; j++){

            // Quando chegar no segundo movimento vertical...
            if(i < movVertical){
                continue;  // ainda não pode mover horizontalmente
            }

            // Movimento final do cavalo: direita
            printf("Direita\n");
            break;   // finaliza o loop interno após o L completo
        }
    }
}

// =====================================================================
// ========================== FUNÇÃO PRINCIPAL ==========================
// =====================================================================
int main() {

    // ====================== TORRE ======================
    printf("=== Movimento da TORRE ===\n");
    moverTorre(5);

    // ====================== BISPO ======================
    printf("\n=== Movimento do BISPO ===\n");
    moverBispo(5);

    // ====================== RAINHA =====================
    printf("\n=== Movimento da RAINHA ===\n");
    moverRainha(8);

    // ====================== CAVALO =====================
    moverCavalo();

    return 0;
}
